# 100-Makefile

# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files (automatically generated from source files)
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Target: all (build the executable)
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile .c files into .o files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Phony targets
clean:
	$(RM) $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all
